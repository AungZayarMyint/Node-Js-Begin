<%- include("./includes/head") %>

<section class="mx-auto">
  <a href="/">Go back home</a>
  <h1 class="title">You can edit your post here!</h1>
  <form action="/admin/post-edit" method="post">
    <input type="text" name="postId" value="<%= post.id %>" hidden>
    <div>
      <label for="title">Enter title</label>
      <input type="text" id="title" name="title" value="<%= post.title %>" required />
    </div>
    <div>
      <label for="photo">Enter photo URL</label>
      <input type="text" id="photo" name="photo" value="<%= post.img_url %>" required />
    </div>
    <div>
      <label for="description">Enter Description</label>
      <textarea name="description" id="description" cols="30" role="30" value="<%= post.description %>"><%= post.description %></textarea>
    </div>
    <button>Update Post</button>
  </form>
</section>
</body>
<%- include("./includes/foot") %>

